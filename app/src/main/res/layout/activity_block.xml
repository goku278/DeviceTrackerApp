<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#FFCDD2"
        android:padding="24dp">

        <!-- Warning Icon (using vector drawable or emoji) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚠️"
            android:textSize="64sp"
            android:layout_marginBottom="16dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Limit Reached!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:gravity="center"/>

        <!-- Category TextView (what you're setting in code) -->
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginTop="8dp"/>

        <!-- Message TextView -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You've reached your daily limit"
            android:textSize="18sp"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Countdown TextView -->
        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App will unlock in 30 seconds"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="24dp"/>

        <!-- Progress Bar (optional) -->
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>